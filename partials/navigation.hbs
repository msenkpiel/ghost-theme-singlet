{{#if isSecondary}}
    {{#foreach navigation}}
        <a href="{{url absolute="true"}}" target="_self">{{label}}</a>
    {{/foreach}}
{{else}}
    <ul class="nav" role="menu">
        {{#foreach navigation}}
            <li class="{{link_class for=(url) class=(concat "nav-" slug)}}" role="menuitem">
                <a href="{{url absolute="true"}}">{{label}}</a>
            </li>
        {{/foreach}}
    </ul>
{{/if}}